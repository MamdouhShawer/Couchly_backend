<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <link rel="stylesheet" href="/css/removeUser.css">


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteButtons = document.querySelectorAll('.delete-btn');

            deleteButtons.forEach((button) => {
                button.addEventListener('click', async (e) => {
                    e.preventDefault();
                    console.log('Delete button clicked');
                    const targetButton = e.target.closest('.delete-btn');
                    targetButton.disabled = true;
                    const id = targetButton.getAttribute('data-id');

                    if (!id) {
                        alert('Error: User ID is not set.');
                        targetButton.disabled = false;
                        return;
                    }

                    try {
                        const response = await fetch(`/removeUser/delete/${id}`, {
                            method: 'DELETE',
                        });

                        if (response.status === 200) {
                            targetButton.closest('tr').remove();
                            alert('User deleted successfully');
                        } else {
                            throw new Error('Failed to delete user.');
                        }
                    } catch (error) {
                        alert(error.message);
                        targetButton.disabled = false;
                    }
                });
            });
        });
    </script>



</head>

<body>
    <%- include('../partials/adminNav') %>

        <section id="content">


                <div class="table">
                    <div class="table-header">
                        <p>User detalis</p>
                        <div>
                            <form action="/removeUser/searchuser" method="get">
                                <input type="text" name="query" placeholder="Search for user ...">
                                <button type="submit">Search</button>
                              </form>
                        </div>
                    </div>
                    <div class="table-section">
                        <table>
                            <thead>
                                <tr>
                                    <th>First name</th>
                                    <th>Last name</th>
                                    <th>username</th>
                                    <th>Email</th>
                                    <th>password</th>
                                    <th>Role</th>
                                    <th>Action</th>

                                </tr>
                            </thead>

                            <tbody>
                                <% Users.forEach(data=>{ %>
                                    <tr>
                                        <td>
                                            <%= data.Firstname %>
                                        </td>
                                        <td>
                                            <%= data.Lastname %>
                                        </td>
                                        <td>
                                            <%= data.Username %>
                                        </td>
                                        <td>
                                            <%= data.email %>
                                        </td>
                                        <td>
                                            <%= data.password %>
                                        </td>
                                        <td>
                                            <%= data.type %>
                                        </td>
                                        <td>
                                            <button data-id="<%= data._id %>" class="edit-btn"><i
                                                    class='bx bxs-edit-alt'></i></button>
                                            <button data-id="<%= data._id %>" class="delete-btn"><i
                                                    class='bx bxs-trash'></i></button>
                                        </td>
                                    </tr>

                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
       

                </div>
        </section>



        <script src="../js/dashboard.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add User</title>
    <!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
    <link rel="stylesheet" href="../css/addUser.css">

</head>

<body>
   <!-- Sidebar -->
   <%- include('../partials/adminNav') %>
    <!-- Sidebar -->
     <!-- CONTENT -->
    <section id="content">
        <!-- NavBar -->
        <nav>
            <i class='bx bx-menu' ></i>
            <a href="#" class="nav-link">Categories</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search....">
                    <button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
                </div>
            </form>
            <a href="#" class="notification">
                <i class='bx bxs-bell' ></i>
                <span class="num">8</span>
            </a>
            <a href="#" class="profile">
                <img src="Ahmed.jpg" alt="">
            </a>
        </nav>
        <!-- NavBar -->
	<!-- Form -->
    <div class="bodys">
        <div class="container">
            <div class="header">
                <h2>Add User Form</h2>
            </div>

            <form action="" class="form" id="form">
                <div class="form-control">
                    <label>First Name</label>
                    <input type="text" name="" id="firstname" placeholder="Enter your First Name" autocomplete="off">
                    <i class='bx bxs-check-circle'></i>
                    <i class='bx bxs-error-circle' ></i>
                    <small>Error Message</small>
                </div>

                <div class="form-control">
                    <label>Last Name</label>
                    <input type="text" name="" id="lastname" placeholder="Enter your Last Name" autocomplete="off">
                    <i class='bx bxs-check-circle'></i>
                    <i class='bx bxs-error-circle' ></i>
                    <small>Error Message</small>
                </div>

                <div class="form-control">
                    <label>Username</label>
                    <input type="text" name="" id="username" placeholder="Enter your username" autocomplete="off">
                    <i class='bx bxs-check-circle'></i>
                    <i class='bx bxs-error-circle' ></i>
                    <small>Error Message</small>
                </div>

                <div class="form-control">
                    <label>email</label>
                    <input type="email" name="" id="email" placeholder="Enter your email" autocomplete="off">
                    <i class='bx bxs-check-circle'></i>
                    <i class='bx bxs-error-circle' ></i>
                    <small>Error Message</small>
                </div>

                <div class="form-control">
                    <label>Password</label>
                    <input type="text" name="" id="password" placeholder="Enter your Password" autocomplete="off">
                    <i class='bx bxs-check-circle'></i>
                    <i class='bx bxs-error-circle' ></i>
                    <small>Error Message</small>
                </div>

                <div class="form-control">
                    <label>Confirmpassword</label>
                    <input type="text" name="" id="Confirmpassword" placeholder="Enter your Confirmpassword" autocomplete="off">
                    <i class='bx bxs-check-circle'></i>
                    <i class='bx bxs-error-circle' ></i>
                    <small>Error Message</small>
                </div>
                <div >
                    <input type="radio" id="Admin" name="choice" value="Admin">
                    <label for="Admin">Admin</label>
                    <input type="radio" id="user" name="choice" value="user">
                    <label for="user">User</label>
                </div>
                <input type="submit" value="Submit" class="btn">
            </form>
        </div>
    </div>
    </section>
        
    <script src="../javascript/addUser.js"></script>
</body>
</html>

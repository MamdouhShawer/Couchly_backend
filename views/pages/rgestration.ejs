<html>
    <head>
        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"> 
        <link rel="stylesheet" href="/css/registration.css">
        <title><%= title %></title>
    </head>
    <body>
        <div class="split left">
            <div class="centered">
            <img  src="../../imgs/logo.png" width="300" height="100" alt="">
            </div>
          </div>
          
          <div class="split right">
            <div class="centered">

              <div class="package">
             <form class="form" id="form">
             <span class="Register">Register</span>
          <form action="*"> 
           <div class="Registeration"> 
            <div class="inputControl">
                <i class="uil uil-user"></i>
            <input type="text" placeholder="first name"  id="first">
            <span class="error"></span>
            </div>

            <div class="inputControl">
                <i class="uil uil-angle-right"></i>
            <input type="text" placeholder="Last name" id="last">
            <span class="error"></span>
            </div>

            <div class="inputControl">
                <i class="uil uil-angle-right"></i>
                <input type="text" placeholder="Username" id="username">
                <span class="error"></span>
                </div>
            
                <div class="inputControl">
                    <i class="uil uil-envelope"></i>
                    <input type="text" placeholder="Email" id="email">
                    <span class="error"></span>
                    <div class="erro"></div>
                    </div>
            
                    <div class="inputControl">
                       <i class="uil uil-lock"></i>
                     <input type="password" placeholder="Password" id="pass">
                     <span class="error"></span>
                     <div class="erro" ></div>
                    </div>
           
            <div class="inputControl">
                    <i class="uil uil-corner-down-right-alt"></i>
                   <input type="password" placeholder="Confirm Password" id="pass2">
                   <span class="error"></span>
                   <div class="erro"></div>
               </div>
               <button class="button" type="submit">Register</button>
               <a href="/login">
                   <button class="button1" type="button">Back</button>
                </a>
               </div>
               </div>
            </form>
            <script defer src="/js/regestration.js"></script>
 </body>
</html>
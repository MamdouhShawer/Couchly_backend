<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="../css/dashboard.css">
	<title>
		<%= title %>
	</title>
</head>

<body>
	<%- include('../partials/adminNav') %>

		<!-- Sidebar -->
		<!-- CONTENT -->
		<section id="content">
			<!-- NavBar -->
			
				<!-- NavBar -->
				<!-- MAIN -->
				<main>
					<div class="head-title">
						<div class="left">
							<h1>Dashboard</h1>
							<ul class="breadcrumb">
								<li>
									<a href="#">Dashboard</a>
								</li>
								<li><i class='bx bxs-chevron-right'></i></li>
								<li>
									<a class="active" href="../../../Final/index.html">Home</a>
								</li>
							</ul>
						</div>
					</div>
					<ul class="box-info">
						<li>
							<i class='bx bxs-calendar-check'></i>
							<span class="text">
								<h3>
									<%= OrdersCount %>
								</h3>
								<p>New Order</p>
							</span>
						</li>
						<li>
							<i class='bx bxs-group'></i>
							<span class="text">
								<h3>
									<%= showDashboard %>
								</h3>

								<p>Visitors</p>
							</span>
						</li>
						<li>
							<i class='bx bxs-dollar-circle'></i>
							<span class="text">
								<h3>
									<%= TotalPrice %>
								</h3>
								<p>Total sales</p>
							</span>
						</li>
					</ul>

					<div class="table-data">
						<div class="order">
							<div class="head">
								<h3>Recent Orders</h3>
								<i class='bx bx-search'></i>
								<i class='bx bx-filter'></i>
							</div>
							<table>
								<thead>
									<tr>
										<th>First Name</th>
										<th>Last Name</th>
										<th>Status</th>
									</tr>
								</thead>
								<tbody>

									<% recentOrder.forEach((user)=> { %>
										<tr>
											<td>
												<p>
													<%= user.FirstName %>
												</p>
											</td>
											<td>
												<p>
													<%= user.LastName %>
												</p>
											</td>
											<td><span class="status completed">Completed</span></td>
										</tr>
										<% }) %>

								</tbody>
							</table>
						</div>
						<div class="todo">
							<div class="head">
								<h3>Todos</h3>
								<i class="bx bx-plus" id="addTodo"></i>
							</div>
							<ul class="todo-list">
								<li class="completed">
									<input type="text" placeholder="Todo" />
									<i class="bx bx-edit"></i>
									<i class="bx bx-trash"></i>
								</li>
							</ul>
						</div>
				</main>
		</section>
		<script src="../js/dashboard.js"></script>
</body>

</html>